<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gamebg">

    <EditText
        android:id="@+id/txtSub"
        android:layout_width="382dp"
        android:layout_height="83dp"
        android:layout_x="449dp"
        android:layout_y="300dp"
        android:background="@drawable/bd_circle_shape"
        android:digits="0123456789"
        android:ellipsize="start"
        android:gravity="center"
        android:hint="快破解密碼，取得寶藏吧！"
        android:inputType="numberDecimal"
        android:singleLine="true"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btGO"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:layout_x="565dp"
        android:layout_y="422dp"
        android:background="@drawable/circle"
        android:text="GO"
        android:textColor="#871313"
        android:textSize="60sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/range"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="522dp"
        android:layout_y="114dp"
        android:textColor="@android:color/white"
        android:textSize="100sp"
        android:textStyle="bold" />

</AbsoluteLayout>
